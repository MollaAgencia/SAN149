@using Aplicacao.Models.COMMON;
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_SiteSharedNew.cshtml";

    var usuarioLogado = values.PRP_UsuarioAutenticadoSite;
}

<div class="body">
    <div role="main" class="main">
        <div class="banners">

            @if (usuarioLogado.PRP_IdBU == 2)
            {
                <!-- banner 01 -->
                <a href="#" data-toggle="modal" data-target="#modal-video-1">
                    <img src="~/Content/img/banner-01.jpg" class="img-fluid d-none d-lg-block w-100">
                    <img src="~/Content/img/banner-tablet-01.png" class="img-fluid d-none d-md-block d-lg-none w-100">
                    <img src="~/Content/img/banner-mobile-01.png" class="img-fluid d-block d-md-none w-100">
                </a>
            }
            else if (usuarioLogado.PRP_IdBU == 1)
            {
                <!-- banner 02 -->
                <a href="#" data-toggle="modal" data-target="#modal-video-1">
                    <img src="~/Content/img/banner-02.jpg" class="img-fluid d-none d-lg-block w-100">
                    <img src="~/Content/img/banner-tablet-02.png" class="img-fluid d-none d-md-block d-lg-none w-100">
                    <img src="~/Content/img/banner-mobile-02.png" class="img-fluid d-block d-md-none w-100">
                </a>
            }
            else if (usuarioLogado.PRP_IdBU == 3)
            {
                <!-- banner 03 -->
                <a href="#" data-toggle="modal" data-target="#modal-video-1">
                    <img src="~/Content/img/banner-03.jpg" class="img-fluid d-none d-lg-block w-100">
                    <img src="~/Content/img/banner-tablet-03.png" class="img-fluid d-none d-md-block d-lg-none w-100">
                    <img src="~/Content/img/banner-mobile-03.png" class="img-fluid d-block d-md-none w-100">
                </a>
            }
            else if (usuarioLogado.PRP_IdBU == 4)
            {
                <!-- banner 04 -->
                <a href="#" data-toggle="modal" data-target="#modal-video-1">
                    <img src="~/Content/img/banner-04.jpg" class="img-fluid d-none d-lg-block w-100">
                    <img src="~/Content/img/banner-tablet-04.png" class="img-fluid d-none d-md-block d-lg-none w-100">
                    <img src="~/Content/img/banner-mobile-04.png" class="img-fluid d-block d-md-none w-100">
                </a>
            }
            else if (usuarioLogado.PRP_IdBU == 5)
            {
                <!-- banner 05 -->
                <a href="#" data-toggle="modal" data-target="#modal-video-1">
                    <img src="~/Content/img/banner-05.jpg" class="img-fluid d-none d-lg-block w-100">
                    <img src="~/Content/img/banner-tablet-05.png" class="img-fluid d-none d-md-block d-lg-none w-100">
                    <img src="~/Content/img/banner-mobile-05.png" class="img-fluid d-block d-md-none w-100">
                </a>
            }
        </div>
    </div>

    <!-- modal video 1 -->
    <div class="modal fade" id="modal-video-1" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content rounded-0">
                <div class="modal-header py-0">
                    <!-- <h5 class="modal-title">Video</h5> -->
                    <button type="button" class="close fecharVideo" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-0">
                    <div class="text-center">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe src="https://player.vimeo.com/video/522972704" allowfullscreen class="embed-responsive-item"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>